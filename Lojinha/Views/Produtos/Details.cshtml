@model Lojinha.Core.ViewModels.ProdutoViewModel
@{
    ViewData["Title"] = "Listagem";
}

<div class="row">

    <div class="col-md-12">
        <div class="panel panel-info">

            <div class="panel-body">
                <br>
                <br>
                <br>
                <div class="row">
                    <div class="col-md-12">
                        <img src="@Model.ImagemUrl" class="img-thumbnail" />
                    </div>
                </div>
                <div class="row">

                    <div class="col-md-6">
                        R$ @Model.Preco
                    </div>

                    <div class="col-md-6">
                        <button class="btn btn-success" data-id="@Model.Id">
                            Adicionar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts
    {
    <script>
        $(function () {
            $(".btn-sucess").each(function () {
                var btn = $(this);
                btn.click(function () {
                    var id = btn.data("id");
                    $.post('/Carrinho/Add', { id: id }, function (data) {
                        $(".carrinho-placeholder").html(data);
                    });
                });
            });
        });
    </script>
}